name: "Homepage"
description: "Homepage integration for Home Assistant"
url: https://gethomepage.dev/
webui: http://[HOST]:[PORT:3000]
version: "1.1.2"
slug: "homepage_addon"
init: false
arch:
  - aarch64
  - amd64
  - armhf
  - armv7
  - i386
ports:
  3000/tcp: 3000
map:
  - share:rw
volumes:      
  - /share/homepage/configs:/app/config # Make sure your local config directory exists
environment:
      TZ: Europe/Lisbon
      HOMEPAGE_ALLOWED_HOSTS: "${HOMEPAGE_ALLOWED_HOSTS}"  # Usa uma variável configurável

# Defina a configuração personalizada que aparecerá no Home Assistant
config:
  - name: "allowed_hosts"
    description: "List of allowed hosts for Homepage integration"
    default: "*"
    required: false
    selector:
      text:
        placeholder: "Enter allowed hosts"
